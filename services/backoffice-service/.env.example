# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/maatcore_backoffice?schema=public"

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# File Upload Configuration
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,application/json

# External Services
# Unreal Engine Integration
UNREAL_ENGINE_API_URL=http://localhost:8080
UNREAL_ENGINE_API_KEY=your-unreal-engine-api-key

# AI Services
OPENAI_API_KEY=your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
GENSPARK_AI_API_KEY=your-genspark-ai-api-key

# n8n Workflow Integration
N8N_API_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key

# AWS Configuration (for media storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=maatcore-media
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_CORS_ORIGIN=http://localhost:3000

# Fact Checking Services
FACT_CHECK_API_URL=https://factchecktools.googleapis.com/v1alpha1
FACT_CHECK_API_KEY=your-google-fact-check-api-key

# RSS Feed Processing
RSS_CHECK_INTERVAL=3600
RSS_MAX_ARTICLES_PER_FEED=50

# Avatar Configuration
AVATAR_DEFAULT_VOICE_PROVIDER=elevenlabs
AVATAR_ANIMATION_CACHE_TTL=3600

# Studio Configuration
STUDIO_RENDER_QUALITY=high
STUDIO_MAX_CONCURRENT_RENDERS=3

# ============================================================================
# NEWS MODULE CONFIGURATION
# ============================================================================

# N8N Webhook Integration
N8N_WEBHOOK_API_KEY=your-n8n-webhook-secret-key

# TTS Service Configuration (ElevenLabs)
TTS_SERVICE_URL=https://api.elevenlabs.io/v1/text-to-speech
TTS_API_KEY=your-elevenlabs-api-key
TTS_DEFAULT_VOICE=21m00Tcm4TlvDq8ikWAM
TTS_MODEL=eleven_multilingual_v2

# HeyGen Video Generation Configuration
HEYGEN_API_KEY=your-heygen-api-key
HEYGEN_API_URL=https://api.heygen.com/v2
HEYGEN_DEFAULT_AVATAR=your-default-avatar-id
HEYGEN_DEFAULT_VOICE=your-default-voice-id
HEYGEN_VOICE_FR=french-voice-id
HEYGEN_VOICE_EN=english-voice-id
HEYGEN_VOICE_ES=spanish-voice-id
HEYGEN_VOICE_DE=german-voice-id
HEYGEN_VOICE_IT=italian-voice-id
HEYGEN_DEFAULT_QUALITY=medium
HEYGEN_WEBHOOK_URL=https://your-domain.com/api/heygen/webhook

# News Processing Configuration
NEWS_AUTO_APPROVAL_THRESHOLD=8
NEWS_DEFAULT_LANGUAGE=fr
NEWS_MAX_ARTICLE_LENGTH=5000
NEWS_MIN_ARTICLE_LENGTH=50

# Broadcast Configuration
BROADCAST_DEFAULT_DURATION=300
BROADCAST_MAX_DURATION=1800
BROADCAST_STORAGE_PATH=./storage/broadcasts
BROADCAST_CDN_URL=https://broadcasts.maatcore.com

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_AGGREGATION_INTERVAL=3600

# External News APIs
NEWS_API_KEY=your-news-api-key
GUARDIAN_API_KEY=your-guardian-api-key
REUTERS_API_KEY=your-reuters-api-key

# Social Media APIs
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
API_KEY_SALT=your-api-key-salt-for-hashing